@model QLBH_LeatherNotebooksShopApp.Models.Category

@{
    ViewBag.Title = "Tạo Mới";
    Layout = "~/Views/Shared/AdminSite_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/css/CreateCate.css" />
<h2>Thêm Danh Mục</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h4>Danh Mục</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.NameCate, htmlAttributes: new { @class = "form-label" })
            <div class="form-input">
                @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group btn-group">
            <input type="submit" value="Tạo Danh Mục" class="btn btn-primary" />
            @Html.ActionLink("Trở Lại Danh sách", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}

